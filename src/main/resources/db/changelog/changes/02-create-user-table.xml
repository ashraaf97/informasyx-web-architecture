<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="02" author="developer">
        <comment>Create User table</comment>
        <createTable tableName="app_user">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="username" type="varchar(50)">
                <constraints nullable="false" unique="true" />
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="person_id" type="bigint">
                <constraints nullable="true" foreignKeyName="fk_user_person" references="person(id)" />
            </column>
            <column name="active" type="boolean" defaultValueBoolean="true">
                <constraints nullable="false" />
            </column>
            <column name="roles" type="varchar(255)" />
        </createTable>

        <createIndex indexName="idx_user_username" tableName="app_user">
            <column name="username" />
        </createIndex>

        <createIndex indexName="idx_user_person_id" tableName="app_user">
            <column name="person_id" />
        </createIndex>
    </changeSet>

</databaseChangeLog> 