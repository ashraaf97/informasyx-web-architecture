<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog 
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="05" author="developer">
        <addColumn tableName="app_user">
            <column name="email_verified" type="BOOLEAN" defaultValue="false">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <!-- Update existing admin user to be email verified -->
        <update tableName="app_user">
            <column name="email_verified" value="true"/>
            <where>username = 'admin'</where>
        </update>
    </changeSet>
</databaseChangeLog>